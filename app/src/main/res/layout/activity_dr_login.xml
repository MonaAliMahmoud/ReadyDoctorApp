<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logindr"
    tools:context="com.example.shaza.readydoctorapp.DrLoginActivity">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="453dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <!--<ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />-->

        <AutoCompleteTextView
            android:id="@+id/drEmail"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="55dp"
            android:hint="prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"

            android:background="@drawable/rounded_white"/>

        <AutoCompleteTextView
            android:id="@+id/drPassword"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="55dp"
            android:hint="password"
            android:imeActionId="6"
            android:imeActionLabel="action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"

            android:background="@drawable/rounded_white"/>

        <Button
            android:id="@+id/sign_in_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:textStyle="bold" />
            <!--android:onClick="GoToDrDetails"-->
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
