<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/humanbody"
    tools:context="com.example.shaza.readydoctorapp.AnatomyActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Ear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="69dp"
            android:layout_height="30dp"
            android:layout_above="@+id/Lung"
            android:layout_alignEnd="@+id/SignOut"
            android:layout_alignRight="@+id/SignOut"
            android:layout_marginBottom="17dp" />

        <Button
            android:id="@+id/Kidney"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:layout_above="@+id/SignOut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="274dp" />

        <Button
            android:id="@+id/Lung"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_above="@+id/Liver"
            android:layout_alignEnd="@+id/SignOut"
            android:layout_alignRight="@+id/SignOut"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="274dp" />

        <Button
            android:id="@+id/Liver"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_above="@+id/Kidney"
            android:layout_alignLeft="@+id/Kidney"
            android:layout_alignStart="@+id/Kidney" />

        <Button
            android:id="@+id/Stomach"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="102dp"
            android:layout_height="34dp"
            android:layout_alignBaseline="@+id/Liver"
            android:layout_alignBottom="@+id/Liver"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/SignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Stomach"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Stomach"
            android:layout_marginBottom="16dp"
            android:text="SignOut"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
